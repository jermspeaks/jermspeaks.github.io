---
import { getCollection } from "astro:content";
import WritingLayout from "../../layouts/Writing.astro";
import WritingListItem from "../../components/WritingListItem.astro";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft && post.data.postType == "newsletter")
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<WritingLayout>
  <ul class="list-none p-0">
    {posts.map((post) => <WritingListItem post={post} />)}
  </ul>
</WritingLayout>
