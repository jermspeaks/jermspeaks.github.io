---
import { CollectionEntry, getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import SeriesPage from "../../layouts/SeriesPage.astro";

export async function getStaticPaths() {
  const series = await getCollection("series");
  return series.map((s) => ({
    params: { slug: s.slug },
    props: s,
  }));
}
type Props = CollectionEntry<"series">;

const series = Astro.props;

const posts = (await getCollection("blog")).filter(
  (post) =>
    Array.isArray(post.data.tags) && post.data.tags.includes(series.data.tag)
);

const { Content } = await series.render();
---

<style>
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  ul li :global(time) {
    flex: 0 0 130px;
    font-style: italic;
    color: #595959;
  }
  ul li a:visited {
    color: #8e32dc;
  }
</style>
<SeriesPage {...series.data}>
  <h1>{series.data.title}</h1>
  <Content />
  <h3>Posts</h3>
  <ul>
    {
      posts.map((post) => (
        <li>
          <FormattedDate date={post.data.pubDate} />
          <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
        </li>
      ))
    }
  </ul>
</SeriesPage>
