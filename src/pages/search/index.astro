---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import BaseBody from "../../components/BaseBody.astro";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import AlgoliaSearch from "../../components/AlgoliaSearch.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <BaseBody>
    <header class="mb-4 flex justify-between align-middle print:hidden">
      <h2
        class="text-xl font-bold mb-4 text-black no-underline hover:text-gray-600 dark:text-white"
      >
        <a href="/">{SITE_TITLE}</a>
      </h2>
    </header>
    <AlgoliaSearch />
    <Footer />
  </BaseBody>
</html>
