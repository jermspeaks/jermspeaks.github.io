---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

export interface Props {
  post: CollectionEntry<"blog">;
  condensed?: boolean;
}

const { post, condensed } = Astro.props;
---

<li
  class:list={[
    "dark:text-white",
    {
      ["my-8"]: !condensed,
      ["my-2"]: condensed,
    },
  ]}
>
  <a
    class="my-4 text-xl hover:underline hover:text-purple-500 visited:text-amber-600 dark:visited:text-purple-300"
    href={`/blog/${post.slug}/`}
  >
    {post.data.title}
  </a>
  <p class="text-slate-800 dark:text-slate-300">
    <i>{post.data.description}</i>
  </p>
  <div class="flex gap-4">
    <FormattedDate
      class="italic text-slate-600 dark:text-slate-300"
      date={post.data.pubDate}
    />
    <div>
      {Array.isArray(post.data.tags) && " "}
      {
        Array.isArray(post.data.tags) &&
          post.data.tags.map((tag: string) => `#${tag}`).join(" ")
      }
    </div>
  </div>
</li>
