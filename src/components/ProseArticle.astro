---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const { class: className } = Astro.props;
---

<article
  class:list={[
    "prose prose-quoteless dark:prose-invert prose-img:mt-0 prose-img:mb-0 prose-figcaption:mt-0 hover:prose-a:text-purple-500",
    {
      ["mx-auto"]: !className?.includes("mx-0"),
      ["lg:prose-xl"]: !className?.includes("lg:prose"), 
    },
    className,
  ]}
>
  <slot />
</article>
<style lang="css" is:global>
  h2:hover .heading-link,
  h3:hover .heading-link,
  h4:hover .heading-link,
  h5:hover .heading-link {
    @apply opacity-100;
  }
  .heading-link {
    @apply hidden md:inline md:opacity-0 relative;
  }
  .heading-link svg {
    @apply absolute top-1/2 -translate-y-1/2 -left-7;
  }

  .external-link {
    @apply inline-block align-super;
  }
</style>
