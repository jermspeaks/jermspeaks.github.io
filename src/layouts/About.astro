---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import BaseBody from "../components/BaseBody.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, updatedDate } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <BaseBody>
    <Header />
    <main>
      <section class="ml-auto mr-auto dark:text-white">
        <h1 class="text-3xl mb-8">{title}</h1>
        <slot name="navigation" />
        <slot name="image" />
        <div class="mt-8"></div>
      </section>
      <section class="ml-auto mr-auto dark:text-slate-300">
        <div>
          {
            updatedDate && (
              <div class="italic">
                Last updated on <FormattedDate date={updatedDate} />
              </div>
            )
          }
        </div>
      </section>
      <slot />
    </main>
    <Footer />
  </BaseBody>
</html>
